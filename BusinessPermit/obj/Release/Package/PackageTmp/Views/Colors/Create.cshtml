@model FinessaAesthetica.Models.Color

@{
    ViewBag.Title = "New Color";
    ViewBag.CurrentEntity = "Color";
    ViewBag.WebPageTitle = "New Color";
}

@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Colors/"><i class="fa fa-home"></i> Color List</a></li>
    <li class="breadcrumb-item actions">New Color</li>
}

@section toolbarright {
    <li><a href="#" id="btnSaveTrigger" title="Create Color"><span class="fa fa-save"></span>&nbsp;SAVE</a></li>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="ibox-content">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-sm-6">
                    <div class="page-header">
                        <h4>Color Information</h4>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Code, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @placeholder = "Color code . . ." })                            
                            @Html.ValidationMessageFor(model => model.Code)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Color description . . ." })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StatusId, "StatusId", new { @class = "control-label col-sm-3" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(model => model.StatusId,
                                         (SelectList)ViewBag.StatusId,
                                         "Select status . . .",
                                         new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StatusId)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input id="submitButton" type="submit" class="hidden" />
}

@section Scripts {
  
    <script>
        $('#btnSaveTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
    </script>
}
