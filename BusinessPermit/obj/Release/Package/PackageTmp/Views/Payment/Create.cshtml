@model BusinessPermit.Models.Payment

@{
    Layout = "~/Views/Shared/_FrontEnd.cshtml";
}


@using (Html.BeginForm("Create", "Payment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="ibox-content">
        <div class="pull-left" style="margin-left: 15px;">
            <span style="font-size:24px;">Payment Verification Form</span>
        </div>

        <br />
        <br />
        <br />
        @Html.ValidationSummary(true)
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label col-md-3">Permit Type</label>
                            <div class="col-md-9">
                                @Html.DropDownList("ApplicationType", new SelectList(ViewBag.ApplicationType, "Value", "Text"), "Select ApplicationType Type", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ApplicationType)
                            </div>
                        </div>                      
                        <div class="form-group">
                            <label class="control-label col-md-3">Reference No.</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.ReferenceNumber, new { @class = "form-control", @placeholder = "Payment Reference Number" })
                                @Html.ValidationMessageFor(model => model.ReferenceNumber)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">OR No.</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.OfficialReceiptNumber, new { @class = "form-control", @placeholder = "Official Receipt Number" })
                                @Html.ValidationMessageFor(model => model.OfficialReceiptNumber)
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="pull-left" style="margin-right: 15px;margin-top: 10px;">
            <button class="btn btn-success">SUBMIT</button>
            <a href="~/" class="btn btn-default">CANCEL</a>
        </div>
    </div>
}


@section scripts {
    <script src="~/dist/js/app.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
