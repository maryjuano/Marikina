@model IEnumerable<BusinessPermit.Models.ZoningClearance>

@{
    ViewBag.Title = "Pending Application";
    ViewBag.CurrentEntity = "Zoning Clearance";
    ViewBag.WebPageTitle = "Pending Application";
}

@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Dashboard/Index">Home</a></li>
    <li class="breadcrumb-item active">Pending Application<li>
}

<br />
<table class="table table-hover">
    <thead>


        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationNumber)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.DateApplied)
               </th>
            <th>
                    @Html.DisplayNameFor(model => model.BusinessName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OwnerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BusinessAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BusinessNature)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MainOffice)
                </th>
            <th>
                    Attachments
                </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr ondblclick="OpenRecord('/ZoningForm/Edit/' + @item.ZoningClearanceId);" style="cursor:pointer">
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationNumber)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.DateApplied)
                    </td>
                <td>
                        @Html.DisplayFor(modelItem => item.BusinessName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OwnerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BusinessAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BusinessNature)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MainOffice)
                    </td>
                <td>
                        <a href="~/ZoningForm/DownloadAttachment?id=@item.ZoningClearanceId">Requirements</a>
                    </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.LinkWithIcon("ZoningForm", "Edit", item.ZoningClearanceId, "fa fa-pencil")
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="~/dist/js/jQuery-2.1.4.min.js"></script>
<script>
    $(document).ready(function () {
        $('.table').bootstrapTable({ search: true });      
    });
</script>
