@model FinessaAesthetica.Models.Users

@{
    ViewBag.Title = "User Details";
    ViewBag.CurrentEntity = "User";
    ViewBag.WebPageTitle = Model.FullName;
}

@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Users/"><i class="fa fa-home"></i> User List</a></li>
    <li class="breadcrumb-item actions">User Details</li>
}

@section toolbarright {
    <li><a href="#" id="btnEditTrigger" title="Edit User"><span class="fa fa-pencil"></span>&nbsp;Edit</a></li>
}
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-header">
                <h4>General Information</h4>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.EmployeeId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EmployeeId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Password)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Password)
                        </dd>
                    </dl>
                </div>
                <div class="col-sm-6">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MiddleName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MiddleName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.LastName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<span hidden="hidden">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "EditTrigger" })
</span>

@section Scripts {
  
    <script>
        $('#btnEditTrigger').click(function () {
            $('.EditTrigger')[0].click();
            return false;
        });
    </script>
}


