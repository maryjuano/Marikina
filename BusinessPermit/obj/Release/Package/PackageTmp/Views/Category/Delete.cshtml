@model FinessaAesthetica.Models.Category

@{
    ViewBag.Title = "Delete";
    ViewBag.CurrentEntity = "Category";
    ViewBag.WebPageTitle = Model.Code;
}

@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Category/"><i class="fa fa-home"></i> Category List</a></li>
    <li class="breadcrumb-item actions">Category Details</li>
}

@section toolbarright {
    <li><a href="#" id="btnEditTrigger" title="Delete Category"><span class="fa fa-trash"></span>&nbsp;Confirm Delete</a></li>
}

<h3>Are you sure you want to delete this?</h3>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-6">
            <div class="page-header">
                <h4>Category Information</h4>
            </div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Status.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Code)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Code)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()


        <input id="submitButton" type="submit" hidden="hidden" />        
    }
</div>


@section Scripts {
  
    <script>
        $('#btnEditTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
    </script>
}
