@model FinessaAesthetica.Models.Branch

@{
    ViewBag.Title = "Branch Details";
    ViewBag.CurrentEntity = "Branch";
    ViewBag.WebPageTitle = Model.Name;
}
@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Branch/"><i class="fa fa-home"></i> Branch List</a></li>
    <li class="breadcrumb-item actions">Branch Details</li>
}

@section toolbarright {
    <li><a href="#" id="btnEditTrigger" title="Edit Branch"><span class="fa fa-pencil"></span>&nbsp;Edit</a></li>
}

<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-6">
            <div class="page-header">
                <h4>Branch Information</h4>
            </div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Status.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Code)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Code)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Manager)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Manager)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Telephone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Telephone)
                </dd>

            </dl>
        </div>
    </div>
</div>

<span hidden="hidden">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "EditTrigger" })
</span>

@section Scripts {
  
    <script>
        $('#btnEditTrigger').click(function () {
            $('.EditTrigger')[0].click();
            return false;
        });
    </script>
}


