@model FinessaAesthetica.Models.Product

@{
    ViewBag.Title = "Delete Product";
    ViewBag.CurrentEntity = "Product";
    ViewBag.WebPageTitle = Model.Desciption;
}

@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Product/"><i class="fa fa-home"></i> Product List</a></li>
    <li class="breadcrumb-item actions">Product Details</li>
}

@section toolbarright {
    <li><a href="#" id="btnEditTrigger" title="Delete Product"><span class="fa fa-trash"></span>&nbsp;Confirm Delete</a></li>
}

<h3>Are you sure you want to delete this?</h3>
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-6">
            <div class="page-header">
                <h4>Product Information</h4>
            </div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ProductCode)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductCode)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Desciption)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Desciption)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Category.Code)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.Code)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Supplier.Code)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Supplier.Code)
                </dd>
            </dl>
        </div>

        <div class="col-sm-6">
            <div class="page-header">
                <h4>Product Description</h4>
            </div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Color.Code)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Color.Code)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UnitMeasurement)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.UnitMeasurement)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.UnitPrice)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StandardRetailPrice)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StandardRetailPrice)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <input id="submitButton" type="submit" hidden="hidden" />
    }
</div>

@section Scripts {
  
    <script>
        $('#btnEditTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
    </script>
}


