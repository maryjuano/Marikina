@model FinessaAesthetica.Models.Product

@{
    ViewBag.Title = "Edit Product";
    ViewBag.CurrentEntity = "Product";
    ViewBag.WebPageTitle = Model.Desciption;
}


@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Product/"><i class="fa fa-home"></i> Product List</a></li>
    <li class="breadcrumb-item actions">Edit Product</li>
}

@section toolbarright {
    <li><a href="#" id="btnSaveTrigger" title="Save Product"><span class="fa fa-save"></span>&nbsp;SAVE</a></li>
    <li><a href="#" id="btnDeleteTrigger" title="Delete Product"><span class="fa fa-trash"></span>&nbsp;DELETE</a></li>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="ibox-content">
        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ProductId)

            <div class="row">
                <div class="col-sm-6">
                    <div class="page-header">
                        <h4>Product Information</h4>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductCode, new { @class = "control-label col-sm-3 label-left" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.ProductCode, new { @class = "form-control", @placeholder = "Product code . . ." })
                            @Html.ValidationMessageFor(model => model.ProductCode)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Desciption, new { @class = "control-label col-sm-3 label-left" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.Desciption, new { @class = "form-control", @placeholder = "Product description . . ." })
                            @Html.ValidationMessageFor(model => model.Desciption)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryId, "CategoryId", new { @class = "control-label col-md-3 label-left" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.CategoryId,
                                         (SelectList)ViewBag.CategoryId,
                                         new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SupplierId, "SupplierId", new { @class = "control-label col-md-3 label-left" })
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.SupplierId,
                                         (SelectList)ViewBag.SupplierId,
                                         new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SupplierId)
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="page-header">
                        <h4>Product Description</h4>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ColorId, "ColorId", new { @class = "control-label col-sm-3 label-left" })
                        <div class="col-sm-9">
                            @Html.DropDownListFor(model => model.ColorId,
                                         (SelectList)ViewBag.ColorId,
                                         new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ColorId)
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.UnitMeasurement, new { @class = "control-label col-sm-3 label-left" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.UnitMeasurement, new { @class = "form-control", @placeholder = "Product unit measurement . . ." })
                            @Html.ValidationMessageFor(model => model.UnitMeasurement)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UnitPrice, new { @class = "control-label col-sm-3 label-left" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.UnitPrice, new { @class = "form-control", @placeholder = "Product price . . ." })
                            @Html.ValidationMessageFor(model => model.UnitPrice)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StandardRetailPrice, new { @class = "control-label col-sm-3 label-left" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(model => model.StandardRetailPrice, new { @class = "form-control", @placeholder = "Product standard retail price . . ." })
                            @Html.ValidationMessageFor(model => model.StandardRetailPrice)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div hidden="hidden">
        @Html.ActionLink("Delete", "Delete", new { id = Model.ProductId }, new { @class = "DeleteTrigger" })
        <input id="submitButton" type="submit" />
    </div>
    

}


@section Scripts {
  
    <script>
        $('#btnSaveTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
        $('#btnDeleteTrigger').click(function () {
            $('.DeleteTrigger')[0].click();
            return false;
        });
    </script>
}
