@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h4>Record Information</h4>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label col-sm-3 label-left">Created On</label>
                    <div class="col-sm-9">
                        <input type="text" readonly="readonly" value="@Model.CreatedOn.ToString("MMM dd, yyyy hh:mm tt")" class="form-control" placeholder="" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3 label-left">Last Modified On</label>
                    <div class="col-sm-9">
                        <input type="text" readonly="readonly" class="form-control" placeholder="@Model.LastModifiedOn.ToString("MMM dd, yyyy hh:mm tt")" />
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label col-sm-3 label-left">Created By</label>
                    <div class="col-sm-9">
                        <input type="text" readonly="readonly" value="@ViewBag.CreatedBy" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3 label-left">Last Modified By</label>
                    <div class="col-sm-9">
                        <input type="text" readonly="readonly" value="@ViewBag.ModifiedBy" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>