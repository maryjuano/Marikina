@model BusinessPermit.Models.Fee

@{
    ViewBag.Title = "New Fee";
    ViewBag.CurrentEntity = "Fee";
    ViewBag.WebPageTitle = Model.Description;
}

@section toolbarleft {
    <li class="breadcrumb-item"><a href="~/Dashboard/Index">Home</a></li>
    <li class="breadcrumb-item"><a href="~/Fee/">Fee List</a></li>
    <li class="breadcrumb-item actions">@Model.Description</li>
}

@section toolbarright {
    <li><a href="#" id="btnSaveTrigger" title="Create User"><span class="fa fa-save"></span>&nbsp;SAVE</a></li>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="ibox-content">
        @Html.ValidationSummary(true)
        <div class="form-horizontal">

            <div class="row">
                <div class="col-md-12">
                    <div class="page-header" style="margin:0;">
                        <h4>General Information</h4>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ApplicationTypeId, "ApplicationTypeId", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.ApplicationTypeId,
                               (SelectList)ViewBag.ApplicationTypeId,
                                         "Select Application Type",
                                         new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ApplicationTypeId)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Price)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("~/Views/Shared/_RecordInformationEdit.cshtml")
        </div>
    </div>
    <input id="submitButton" type="submit" class="hidden" />
}

@section Scripts {
    <script>
        $('#btnSaveTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
    </script>
}
